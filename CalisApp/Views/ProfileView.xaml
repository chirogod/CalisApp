<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:CalisApp.ViewModels"
             xmlns:modelsDto="clr-namespace:CalisApp.Models.DTOs"
             x:DataType="viewmodel:ProfileViewModel"
             x:Class="CalisApp.Views.ProfileView"
             Title="ProfileView"
             BackgroundColor="#f5f5f5">
    <ScrollView >
        <VerticalStackLayout Spacing="15">
            <Border StrokeThickness="0"
                    BackgroundColor="#0055FF"
                    Padding="25,30,25,30"
                    Margin="0,0,0,20">

                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="0,0,30,30"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="15">

                    <Grid ColumnDefinitions="*">

                        <Border Grid.Column="1" 
                                StrokeShape="RoundRectangle 25"
                                HeightRequest="80" 
                                WidthRequest="80"
                                BackgroundColor="#3377FF"
                                StrokeThickness="0">

                            <Image WidthRequest="40" Source="perfil48x48.png"/>

                        </Border>
                    </Grid>

                    <Grid RowDefinitions="*,*" ColumnSpacing="15">

                        <VerticalStackLayout Grid.Row="0">
                            <Label HorizontalTextAlignment="Center" Text="{Binding Usuario.FullName}" TextColor="White" FontSize="18" FontAttributes="Bold"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Row="1">
                            <Label HorizontalTextAlignment="Center" Text="Miembro desde 2/12/2025" TextColor="White" FontSize="12" FontAttributes="Bold"/>
                        </VerticalStackLayout>

                    </Grid>
                </VerticalStackLayout>
            </Border>

            <VerticalStackLayout Spacing="20" Padding="30, 0">

                <Button Text="Descargar rutina personalizada" ImageSource="download32x32.png"
                        Command="{Binding DownloadRoutineCommand}"
                        BackgroundColor="#007BFF"
                        TextColor="White"
                        HeightRequest="55"
                        CornerRadius="8"
                        FontAttributes="Bold"
                        Margin="15, 0, 15, 0" />

            </VerticalStackLayout>

            <Border StrokeThickness="0"
                    BackgroundColor="#fff"
                    Padding="20 40"
                    Margin="30" >
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="25"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">

                    <Label Text="InformaciÃ³n Personal"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#333333"
                           Margin="0,0,0,5" />

                    <BoxView HeightRequest="1" Color="#EEEEEE" />

                    <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                        <Image Source="email32x32.png"/>

                        <VerticalStackLayout Spacing="2">
                            <Label Text="Email" TextColor="#666666" FontSize="12" />
                            <Label Text="{Binding Usuario.Email}" FontSize="15" TextColor="#000000" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                        <Image Source="phone32x32.png"/>

                        <VerticalStackLayout Spacing="2">
                            <Label Text="Telefono" TextColor="#666666" FontSize="12" />
                            <Label Text="+54 11 1234-5678" FontSize="15" TextColor="#000000" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                        <Image Source="date32x32.png"/>

                        <VerticalStackLayout Spacing="2">
                            <Label Text="Fecha de Nacimiento" TextColor="#666666" FontSize="12" />
                            <Label Text="15 de Mayo, 1995" FontSize="15" TextColor="#000000" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                </VerticalStackLayout>

            </Border>

            

            <VerticalStackLayout Spacing="20" Padding="30">

                <Button Text="Cerrar Sesion"
                    Command="{Binding LogoutCommand}"
                    BackgroundColor="Red"
                    TextColor="White"
                    HeightRequest="55"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    Margin="15, 10, 15, 30" />

            </VerticalStackLayout>



        </VerticalStackLayout>
    </ScrollView>
</ContentPage>