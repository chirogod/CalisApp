<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CalisApp.ViewModels"
             x:DataType="viewmodels:LoginViewModel"
             x:Class="CalisApp.Views.LoginView"
             BackgroundColor="#1a3029"
             Title="LoginView">

    <ScrollView>
        <Grid RowDefinitions="Auto, *, Auto" 
              Padding="30,40,30,20" 
              RowSpacing="20">

            <VerticalStackLayout Grid.Row="0" Spacing="5" HorizontalOptions="Center">

                <Image Source="vt_logo.png" 
                       HeightRequest="120" 
                       WidthRequest="120"
                       Margin="0,0,0,10">
                    <Image.Shadow>
                        <Shadow Brush="#facc43"
                                Offset="0,0"
                                Radius="20"
                                Opacity="0.6"/>
                    </Image.Shadow>
                </Image>

                <Label Text="Calisteniapp"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="#facc43"
                       HorizontalOptions="Center" />

                <Label Text="Tu entrenamiento personalizado"
                       FontSize="14"
                       TextColor="#8ca096"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>

            <Border Grid.Row="1"
                    Stroke="#4d6b5e"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 20"
                    BackgroundColor="#23000000"
                    VerticalOptions="Center">

                <VerticalStackLayout Spacing="15" Padding="20,30">

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Email" 
                               TextColor="White" 
                               FontAttributes="Bold" 
                               FontSize="14"/>

                        <Border StrokeShape="RoundRectangle 8"
                                StrokeThickness="0"
                                BackgroundColor="#2d453d"
                                HeightRequest="50">
                            <Entry Text="{Binding LoginDto.Email}"
                                   Placeholder="tu@email.com"
                                   PlaceholderColor="#6b857d"
                                   TextColor="White"
                                   Keyboard="Email"
                                   VerticalOptions="Center"
                                   Margin="10,0"/>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Contraseña" 
                               TextColor="White" 
                               FontAttributes="Bold" 
                               FontSize="14"/>

                        <Border StrokeShape="RoundRectangle 8"
                                StrokeThickness="0"
                                BackgroundColor="#2d453d"
                                HeightRequest="50">
                            <Entry Text="{Binding LoginDto.Password}"
                                   Placeholder="********"
                                   PlaceholderColor="#6b857d"
                                   TextColor="White"
                                   IsPassword="True"
                                   VerticalOptions="Center"
                                   Margin="10,0"/>
                        </Border>
                    </VerticalStackLayout>

                    <Label Text="{Binding ErrorMessage}" 
                           TextColor="#ff5f5f" 
                           HorizontalOptions="Center"
                           IsVisible="{Binding ErrorMessage, Converter={StaticResource IsNotNullConverter}}"/>
                    <Button Text="Iniciar Sesión"
                            Command="{Binding LoginCommand}"
                            BackgroundColor="#facc43"
                            TextColor="#1a3029"
                            FontAttributes="Bold"
                            FontSize="16"
                            CornerRadius="10"
                            HeightRequest="50"
                            Margin="0,10,0,0">
                        <Button.Shadow>
                            <Shadow Brush="Black" Offset="0,4" Radius="5" Opacity="0.2"/>
                        </Button.Shadow>
                    </Button>

                    <Label Text="¿Olvidaste tu contraseña?"
                           TextColor="#facc43"
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}" />
                        </Label.GestureRecognizers>
                    </Label>

                </VerticalStackLayout>
            </Border>

            <Label Grid.Row="2"
                   Text="Versión 1.0.0"
                   TextColor="#6b857d"
                   FontSize="12"
                   HorizontalOptions="Center"
                   VerticalOptions="End"
                   Margin="0,20,0,0"/>

        </Grid>
    </ScrollView>
</ContentPage>