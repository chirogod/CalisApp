<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:CalisApp.Models"
             xmlns:viewmodel="clr-namespace:CalisApp.ViewModels"
             x:Class="CalisApp.Views.VideosView"
             Title="VideosView"
             BackgroundColor="#F5F5F7">
    <VerticalStackLayout>

        <Border Margin="15, 10, 15, 0"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="1"
                Stroke="#d3d3d3"
                BackgroundColor="White">
            <SearchBar Placeholder="Buscar videos, ejercicios..."
                       Text="{Binding SearchText}"
                       SearchCommand="{Binding SearchVideosCommand}"
                       CancelButtonColor="#6B7280" 
                       SearchIconColor="#111827"
                       TextColor="#111827" 
                       FontSize="16"/>
        </Border>

        <ScrollView Orientation="Horizontal" Padding="15, 10, 15, 10" HorizontalScrollBarVisibility="Never">
            <CollectionView ItemsSource="{Binding Categories}"
                            SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Category">

                        <Border StrokeShape="RoundRectangle 20"
                                Padding="15, 8"
                                StrokeThickness="0">

                            <Border.Triggers>
                                <DataTrigger TargetType="Border" Binding="{Binding IsSelected}" Value="True">
                                    <Setter Property="BackgroundColor" Value="#8B5CF6" />
                                </DataTrigger>
                                <DataTrigger TargetType="Border" Binding="{Binding IsSelected}" Value="False">
                                    <Setter Property="BackgroundColor" Value="#E5E7EB" />
                                </DataTrigger>
                            </Border.Triggers>

                            <Label Text="{Binding Name}" 
                                   FontSize="14" 
                                   FontAttributes="Bold">

                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding IsSelected}" Value="True">
                                        <Setter Property="TextColor" Value="White" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding IsSelected}" Value="False">
                                        <Setter Property="TextColor" Value="#6B7280" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>

                            <Border.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:VideosViewModel}}, Path=SelectFilterCommand}"
                                    CommandParameter="{Binding .}" />
                            </Border.GestureRecognizers>

                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>


        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding Videos}"
                        Margin="0,10,0,0">
            

            
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="15"/>
            </CollectionView.ItemsLayout>
            

            <CollectionView.ItemTemplate>
                
                <DataTemplate x:DataType="models:Video">
                    
                    
                    <Border StrokeShape="RoundRectangle 15"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            BackgroundColor="White"
                            Padding="0" Margin="15, 0">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Path=BindingContext.GoToDetailCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                                    CommandParameter="{Binding .}" />
                        </Border.GestureRecognizers>

                        <VerticalStackLayout Spacing="0">
                            

                            <VerticalStackLayout Padding="15">

                                <FlexLayout Direction="Row" AlignContent="Start" AlignItems="Center" Wrap="Wrap">

                                    <Border StrokeShape="RoundRectangle 5" 
                                            BackgroundColor="Orange" 
                                            Padding="8, 3" 
                                            Margin="0,0,8,0">
                                        <Label Text="Categoria" 
                                               TextColor="#fff" 
                                               FontSize="12" 
                                               FontAttributes="Bold"/>
                                    </Border>

                                </FlexLayout>

                                <Label Text="{Binding Title}" 
                                       FontSize="18" 
                                       TextColor="#111827" 
                                       FontAttributes="Bold" 
                                       Margin="0, 0, 0, 5" />

                                <Label Text="{Binding Description}" 
                                        FontSize="18" 
                                        TextColor="#111827" 
                                        FontAttributes="Italic" 
                                        Margin="0, 0, 0, 5" />
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>