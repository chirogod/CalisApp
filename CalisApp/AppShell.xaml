<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CalisApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CalisApp"
    xmlns:views="clr-namespace:CalisApp.Views"
    Title="CalisApp" Shell.NavBarIsVisible="False">

    
    <TabBar>
        <Tab Title="Home"
            Icon="home32x32.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomeView}" />
        </Tab>
        <Tab Title="Clases"
             Icon="clases32x32.png">
             <ShellContent ContentTemplate="{DataTemplate views:SessionsView}" />
        </Tab>
        <Tab Title="Ejercicios"
             Icon="video32x32.png">
            <ShellContent ContentTemplate="{DataTemplate views:SessionsView}" />
        </Tab>
        <Tab Title="Perfil"
             Icon="perfil32x32.png">
            <ShellContent ContentTemplate="{DataTemplate views:SessionsView}" />
        </Tab>
    </TabBar>

</Shell>
