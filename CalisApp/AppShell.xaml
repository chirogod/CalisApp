<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CalisApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CalisApp"
    xmlns:views="clr-namespace:CalisApp.Views"
    Title="CalisApp">

    
    <TabBar>
        <Tab Title="Cats"
            Icon="cat.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomeView}" />
        </Tab>
        <Tab Title="Dogs"
            Icon="dog.png">
            <ShellContent ContentTemplate="{DataTemplate views:SessionsView}" />
        </Tab>
    </TabBar>

</Shell>
